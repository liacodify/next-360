datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  email          String   @unique
  hashedPassword String?
  role           String   @default("USER")

  tokens      Token[]
  sessions    Session[]
  PointMarker PointMarker[]
  UserCompany UserCompany[]
}

model UserCompany {
  userId    Int
  companyId Int

  user    User    @relation(fields: [userId], references: [id])
  company Company @relation(fields: [companyId], references: [id])

  @@id([userId, companyId])
}

model Session {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Token {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hashedToken String
  type        String
  expiresAt   DateTime
  sentTo      String

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([hashedToken, type])
}

model Project {
  id               Int               @id @default(autoincrement())
  name             String
  PointMarker      PointMarker[]
  Company          Company?          @relation(fields: [companyId], references: [id])
  companyId        Int?
  locations        ProjectLocation[]
  videoCollections VideoCollection[]
}

model ProjectLocation {
  id        Int      @id @default(autoincrement())
  lat       Float
  lon       Float
  meter     Float?
  createdAt DateTime @default(now())

  projectId Int
  project   Project @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model Company {
  id          Int           @id @default(autoincrement())
  name        String
  projects    Project[]
  UserCompany UserCompany[]
}

model File {
  id       Int    @id @default(autoincrement())
  filePath String
  duration Float

  startPlace Float?
  order      Int

  gpsPoints GpsPoint[]

  tagIds Int[]

  collectionId Int

  createdAt DateTime @default(now())

  collection VideoCollection @relation(fields: [collectionId], references: [id])

  @@unique([collectionId, order])
}

model VideoCollection {
  id        Int      @id @default(autoincrement())
  projectId Int
  name      String
  date      DateTime
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  files   File[]
  tagIds  Int[]
}

model Marker {
  id          Int           @id @default(autoincrement())
  name        String
  icon        String
  PointMarker PointMarker[]
}

model GpsPoint {
  id              Int   @id @default(autoincrement())
  lat             Float
  lon             Float
  second          Float
  segmentDistance Float
  totalDistance   Float

  fileId Int
  file   File? @relation(fields: [fileId], references: [id])
}

model PointMarker {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  lat       Float?
  lon       Float?
  comment   String
  urlFile   String?
  Tags      Int[]

  markerId       Int?
  projectId      Int?
  parentId       Int?
  createdById    Int
  referenceMeter Float?

  project Project?      @relation(fields: [projectId], references: [id])
  user    User          @relation(fields: [createdById], references: [id])
  marker  Marker?       @relation(fields: [markerId], references: [id])
  parent  PointMarker?  @relation("Replies", fields: [parentId], references: [id])
  replies PointMarker[] @relation("Replies")
}

model Tag {
  id    Int     @id @default(autoincrement())
  name  String
  color String?
}
